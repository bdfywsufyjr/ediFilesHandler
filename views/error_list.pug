extends layout

block content

    h3=title

    p

    <!-- Data table-->

    table#pickle.display
        thead
            tr
                th Заказ
                th Файл
                th Статус
                th Ошибка
                th Дата
                th Действия
        tbody
            each error in errors_list
                tr
                    td #{error.order}
                    td #{error.filename}
                    td #{error.status}
                    td #{error.response}
                    td #{order.created_at.toLocaleString('uk-UA')}
                    td
                        div.dropdown
                            a(href='#' data-toggle='dropdown').dropdown-toggle Действия
                            div.dropdown-menu
                                a(href='../data/detail/' + error.order).dropdown-item Детали заказа
                                a(href='../data/error/' + error._id + '/delete').dropdown-item Удалить

